<header>
<h1>Golfers</h1>
<p>A list of all the current Golfers in the Database is listed below </p>
</header>
<main>
    <section>
<nav>
    <a href="/" class="button-link">Home</body></a>
    <a href="/golfers" class="button-link">Golfers</body></a>
    <a href="/employees" class="button-link">Employees</body></a>
    <a href="/sales" class="button-link">Sales</body></a>
    <a href="/tee_times" class="button-link">Tee Times</body></a>
    <a href="/golfers_has_tee_times" class="button-link">Golfers with Tee Times</body></a>
</nav>
    </section>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <section>
{{!-- Create a table --}}
<table id="golfer-table">

    {{!-- Header section --}}
    <thead>

        
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    
    </thead>

    {{!-- Body section --}}
    <tbody>

        
        {{#each data}}
        <tr data-value={{this.golfer_id}}>  
            <td>{{this.golfer_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.email}}</td>
            <td>{{this.address}}</td>
            <td><button onclick="deleteGolfer({{this.golfer_id}})">Delete Golfer</button></td>
        </tr>
        {{/each}}

    </tbody>
</table>
    </section>
<script src="./js/delete_golfer.js"></script>

<fieldset>
{{!-- Form to search for a golfer by last name --}}
<h2>Search For a Golfer</h2>
<p>Search by last name using the field below. Partial last names are OK too!</p>
<form id="search-golfer-html" method='GET' action='/golfers'>
    <label for="input-last_name">Search by Last Name: </label>
    <input type="text" name="last_name" id="input-last_name-html-search">
    
    <input type="submit">
    <a href='/golfers'><button>Reset</button></a>
</form>
</fieldset>

<fieldset>
{{!-- Form to add a record to the table  --}}
<h2>Add a New Golfer</h2>
<p>To add a new golfer, please enter their information below and click 'Submit'!</p>
<form id="add-golfer-form-ajax">
    <label for="input-first_name">First Name: </label>
    <input type="text" name="input-first_name" id="input-first_name">
    
    <label for="input-last_name">Last Name: </label>
    <input type="text" name="input-last_name" id="input-last_name">

    <label for="input-phone">Phone: </label>
    <input type="text" name="input-phone" id="input-phone">

    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email">

    <label for="input-address">Address: </label>
    <input type="text" name="input-address" id="input-address">

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_golfer.js"></script>
</fieldset>


<fieldset>
<h2>Update A Golfer's Information</h2>
<p>To update a specific golfer's information</p>
<form id="update-golfer-form-ajax">

    <label for="input-golfer_id">Golfer: </label>
    <select name="input-golfer_id" id="mySelect">
        <option value="test">Select a Golfer</option>
        {{#each data}}
        <option value="{{this.golfer_id}}">{{this.first_name}} {{this.last_name}}</option>
        {{/each}}
    </select>

    <label for="input-first_name">First Name: </label>
    <input type="text" name="input-first_name" id="input-first_name-update">

    <label for="input-last_name">Last Name: </label>
    <input type="text" name="input-last_name" id="input-last_name-update">

    <label for="input-phone">Phone: </label>
    <input type="text" name="input-phone" id="input-phone-update">

    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email-update">

    <label for="input-address">Address: </label>
    <input type="text" name="input-address" id="input-address-update">

    <input type="submit">
</form>

<script src="./js/update_golfer.js"></script>
</fieldset>

